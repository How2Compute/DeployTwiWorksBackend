{
  "name": "TwiWorks Backend",
  "description": "TwiWorks Backend - for Heroku.",
  "website": "https://how2compute.cf/",
  "repository": "https://gitlab.com/HowToCompute/tw-heroku",
  "success_url": "/twitch_callback",
  "env": {
    "TWITCH_CLIENT_ID": {
      "description": "Your Twitch Application Client ID"
    },
    "TWITCH_CLIENT_SECRET": {
      "description": "Your Twitch Application Client Secret"
    },
    "TWITCHWORKS_HEROKU": {
      "description": "Required Key",
      "value": "true"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "stack": "container"
}
